<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Camara"
             Icon="camara.png">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Captura de Imagen" FontSize="Title" HorizontalTextAlignment="Center" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Image Source="{Binding Fotico}"></Image>
                <Button Text="Tomar Foto" Command="{Binding CapturarComando}" Grid.Row="1" ></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>